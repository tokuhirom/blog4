{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "bump"
    }
  ]
}
